<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyStreamer"
        android:layout_below="@+id/textView"
        android:layout_gravity="center"
        android:layout_alignStart="@+id/xyzReader"
        android:layout_alignEnd="@+id/xyzReader"
        android:onClick="spotifyStreamerButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresApp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/spotifyStreamer"
        android:layout_gravity="center"
        android:layout_alignStart="@+id/xyzReader"
        android:layout_alignEnd="@+id/xyzReader" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryApp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/scoresApp"
        android:layout_gravity="center"
        android:layout_alignStart="@+id/xyzReader"
        android:layout_alignEnd="@+id/xyzReader"
        android:onClick="libraryAppClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildItBigger"
        android:layout_below="@+id/libraryApp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:layout_alignStart="@+id/libraryApp"
        android:layout_alignEnd="@+id/libraryApp"
        android:onClick="buildItBiggerClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzReader"
        android:layout_below="@+id/buildItBigger"
        android:layout_marginTop="38dp"
        android:layout_gravity="center"
        android:layout_alignEnd="@+id/capStoneApp"
        android:layout_alignStart="@+id/capStoneApp"
        android:onClick="xyzReaderClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE MYOWN APP"
        android:id="@+id/capStoneApp"
        android:layout_below="@+id/xyzReader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:onClick="capStoneClicked"/>

</RelativeLayout>
